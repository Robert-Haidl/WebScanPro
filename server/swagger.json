{
  "openapi": "3.0.0",
  "info": {
    "title": "Proxy API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/scan": {
      "post": {
        "summary": "Send a POST request to an external URL",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "url": {
                    "type": "string",
                    "description": "URL to send the POST request to"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    }
  }
}
